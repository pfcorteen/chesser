{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "suppressImplicitAnyIndexErrors": false,
        "strictNullChecks": false,
        "outDir": "lib",
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
